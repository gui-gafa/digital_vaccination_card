<div style="width: 700px;margin:0 auto;">
  <h1 class="title-form">Nova Dose</h1>
  <%#= simple_form_for([@vaccine, @dose]) do |f| %>
  <%= simple_form_for(@dose, as: :dose, method: :post, url: user_vaccine_doses_path) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :date,
                    as: :string,
                    label: "Data Dose",
                    input_html: {class: "datepicker", style: "margin: 0 !important;"},
                    order: [:day, :month, :year]
                     %>
    </div>

    <!-- Colocar um field para cadastrar a data da primeira dose -->
    <div class="form-actions">
    <span class='d-flex' style="justify-content: space-between;">
      <%= f.submit 'Registrar Dose', class: 'br-button mr-0', primary:"" %>
      <%= link_to 'Voltar', user_vaccines_path, class: 'br-button mr-0', secondary:"" %>
    </span>
    </div>
  <% end %>
</div>

