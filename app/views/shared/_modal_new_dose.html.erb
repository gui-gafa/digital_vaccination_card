<div class="modal fade" id="modal-window<%=vaccine.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <%= simple_form_for(Dose.new, as: :dose, method: :post, url: user_vaccine_doses_path(vaccine)) do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Nova Dose</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-inputs">
            <%= f.input :date,
                          as: :string,
                          label: "Data Dose",
                          input_html: {class: "datepicker", style: "margin: 0 !important;"},
                          order: [:day, :month, :year]
                           %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit 'Registrar Dose', class: 'br-button mr-0', primary:"" %>
          <%= link_to 'Voltar', user_vaccines_path, class: 'br-button mr-0', secondary:"" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

