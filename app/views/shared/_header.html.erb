<div class="br-header" style="width: 100%; margin-bottom: 45px;">
    <div class="container-fluid d-flex justify-content-between">
        <div class="d-flex">
            <div class="logo">
                <%= image_tag "sus_logo.png", alt: "sus" %>
                <%# <div class="sign width 100%">VacinasApp</div> %>
            </div>
            <div class="menu ml-2 my-4" style="width:100%">
                <div class="title mt-1" style="font-size: 20px">Carteira de Vacina Digital</div>
                <div class="subtitle mb-2 text-left ml-0">Sempre em dia com a sua saúde</div>
            </div>
        </div>
        <div>
            <div class="actions mt-4" style="max-width:100%">
                <div class="links">
                    <button class="br-button" type="button" circle mini>
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <ul>
                        <li class="title">Acesso Rápido</li>
                        <li><a href="javascript:void(0);">Sua Carteira</a></li>
                        <li><a href="https://antigo.saude.gov.br/saude-de-a-z/vacinacao/vacine-se#calendario" target=_blank>Calendário de Vacinação</a></li>
                        <li><a href="https://antigo.saude.gov.br/saude-de-a-z/vacinacao/campanhas">Campanhas Vigentes</a></li>
                    </ul>
                </div>

                <div class="search-btn">
                    <button class="br-button" type="button" circle mini>
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                <% if current_user.nil? %>
                <div class="login">
                    <%= link_to new_user_session_path do %>
                    <button class="br-button" type="button" mini>
                        <i class="fas fa-user"></i><span class="ml-1">Entrar</span>
                    </button>
                    <% end %>
                </div>
                <% else %>
                <div class="login">
                    <%= link_to destroy_user_session_path, method: :delete do %>
                    <button class="br-button" type="button" mini>
                        <i class="fas fa-user"></i><span class="ml-1">Sair</span>
                    </button>
                    <% end %>
                </div>
                <% end %>
                <% if !current_user.nil? %>
                <div class="avatar">
                    <div class="br-badge" danger>
                        <div class="icon">5</div>
                        <div class="content">
                              <div class="br-avatar">
                                  <div class="image">
                                      <!-- <img src="https://picsum.photos/id/823/400" alt="Avatar" /> -->
                                      <!--  -->
                                        <%= image_tag "https://avatars2.githubusercontent.com/u/66792796?v=4",
                                        class: "dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                                        </div>
                                  </div>
                              </div>
                        </div>
                    </div>
                </div>
                <% end %>

            </div>
<!--             <div class="search" style="margin-left:auto">
                <div class="br-input has-icon">
                    <label></label>
                    <input class="has-icon" type="text" placeholder="Quer saber sobre alguma vacina?" />
                    <button class="icon" type="button">
                        <span class="icon"><i class="fas fa-search"></i></span>
                    </button>
                </div>
                <button class="br-button search-close" type="button" circle mini>
                    <i class="fas fa-times"></i>
                </button>
            </div> -->
        </div>
    </div>
</div>


